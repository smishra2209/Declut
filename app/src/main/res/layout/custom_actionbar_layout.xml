<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:alpha="0.7">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:gravity="center_horizontal|center">

        <ImageView
                android:layout_width="111dp"
                android:layout_height="30dp" app:srcCompat="@mipmap/title"
                android:id="@+id/imageView"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="5dp" android:layout_gravity="center_horizontal"
        />
    </RelativeLayout>

</RelativeLayout>
